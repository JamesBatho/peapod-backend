{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "id": {
      "type": "integer"
    },
    "name": {
      "type": "string",
      "minLength": 1,
      "maxLength": 30
    },
    "age": {
      "type": "integer"
    },
    "allergies": {
      "type": "string"
    },
    "likes": {
      "type": "string"
    },
    "parentId": {
      "type": "integer"
    }
  },
  "additionalProperties": false,

  "required": ["name"]
}
